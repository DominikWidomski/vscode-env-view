{
  "name": "env-ui",
  "displayName": "env-ui",
  "description": "Visual UI helping to manage .env files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:env-ui.helloWorld",
    "workspaceContains:**/.env*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "env-ui.helloWorld",
        "title": "Hello World"
      },
      {
        "when": "",
        "command": "env-ui.showView",
        "title": "Show View",
        "category": "Env UI"
      },
      {
        "when": "",
        "command": "env-ui.showViewToSide",
        "title": "Show View to the side",
        "category": "Env UI"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceScheme == .env*",
          "command": "env-ui.showView",
          "alt": "env-ui.showViewToSide",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"**/*.{ts,js,json,html}\"",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "lodash": "^4.17.19",
    "mocha": "^7.1.1",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
